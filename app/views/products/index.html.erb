<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sku</th>
      <th>Color</th>
      <th>Collection</th>
      <th>Warehouse inventory</th>
      <th>Bdbox inventory</th>
      <th>Blacklion inventory</th>
      <th>Cotswold inventory</th>
      <th>Cost cents</th>
      <th>Notes</th>
      <th>Wholesale cents</th>
      <th>Retail cents</th>
      <th>Selling</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.sku %></td>
        <td><%= product.color %></td>
        <td><%= product.collection %></td>
        <td><%= product.warehouse_inventory %></td>
        <td><%= product.bdbox_inventory %></td>
        <td><%= product.blacklion_inventory %></td>
        <td><%= product.cotswold_inventory %></td>
        <td><%= product.cost_cents %></td>
        <td><%= product.notes %></td>
        <td><%= product.wholesale_cents %></td>
        <td><%= product.retail_cents %></td>
        <td><%= product.selling %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

